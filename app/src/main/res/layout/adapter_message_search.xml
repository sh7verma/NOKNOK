<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_adapter_message_search_main_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@drawable/gradient_2"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_adapter_message_search_icon_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_adapter_message_search_illustration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration_5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <LinearLayout
            android:id="@+id/ll_adapter_message_search_icon_text_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/ll_adapter_message_search_icon_text_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_adapter_message_search_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_play" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.app.noknok.customviews.BoldTextView
                        android:id="@+id/tv_adapter_message_search_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JEZZY"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="25sp" />

                    <com.app.noknok.customviews.RegularTextView
                        android:id="@+id/tv_adapter_message_search_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:35PM"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>